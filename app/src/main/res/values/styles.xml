<resources>

  <!-- Base application theme. -->
  <style name="KForecastTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorBackground">@color/colorBackground</item>
    <item name="android:windowBackground">@color/material_blue_grey_800</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

  <style name="KForecastTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="KForecastTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="KForecastTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
